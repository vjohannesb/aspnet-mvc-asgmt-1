@{
    ViewData["Title"] = "YH";
}


<div class="text-center">
    @if (SignInManager.IsSignedIn(User))
    {
        <h1 class="display-4">Welcome @User.FindFirst("DisplayName").Value!</h1>
    }
    else
    {
        <h1 class="display-4">Welcome!</h1>
        <h2 class="display-6"> Please log in to access your YH-portal.</h2>
    }
</div>
